!ifndef ROOT
!error Se requiere la macro ROOT
!endif

!ifndef INC_NOVARS

TFLC_LIB = $(ROOT)$(SEP)3rdparty$(SEP)lib$(SEP)tflc_w32.lib
TFLC_DIR = $(ROOT)$(SEP)3rdparty$(SEP)topflc
INCLUDE += -I$(TFLC_DIR)

!endif #INC_NOVARS

!ifndef INC_NOTARGETS

$(TFLC_LIB): lib3p_dir .EXISTSONLY
	@%make savedir
	cd $(TFLC_DIR)
	! $(MAKE) -f makefile.w32 $^.
	$(COPY) $^. $^:
	@%make loaddir

clean_tflc: .SYMBOLIC
	@%make savedir
	cd $(TFLC_DIR)
	! $(MAKE) -f makefile.w32 clean
	@%make loaddir

!endif #INC_NOTARGETS
